$red-color = #E6382F

input::-webkit-input-placeholder, textarea::-webkit-input-placeholder
  color #999 !important
  font 400 13.3333px Arial !important

input:-moz-placeholder, textarea::-moz-input-placeholder
  color #999 !important
  font 400 13.3333px Arial !important

input:-ms-input-placeholder, textarea::-ms-input-placeholder
  color #999 !important
  font 400 13.3333px Arial !important

body
  .el-carousel
    overflow hidden

  .el-message-box__headerbtn:hover .el-message-box__close
    color $red-color

  .el-date-table td.today span, .el-picker-panel__icon-btn:hover, .el-picker-panel__shortcut:hover
    color $red-color

  .el-date-picker__header-label.active, .el-date-picker__header-label:hover, .el-date-table td.available:hover, .el-month-table td .cell:hover, .el-year-table td .cell:hover
    color $red-color

  .el-date-table td.in-range div
    background-color #F5F5F5

  .el-pagination__total
    color #666666

  .el-pagination__sizes .el-input__inner
    color #666666

  .el-input__inner, .el-textarea__inner
    border-color #DDD
    font-size 14px
    color #171717

  .el-input__inner:hover, .el-textarea__inner:hover, .el-pagination__sizes .el-input .el-input__inner:hover, .el-range-editor.is-active, .el-range-editor.is-active:hover
    border-color #C2C2C2

  .el-select .el-input.is-focus .el-input__inner, .el-select .el-input__inner:focus, .el-input.is-active .el-input__inner, .el-input__inner:focus
    border-color #C2C2C2

  .el-form-item.is-success .el-input__inner, .el-form-item.is-success .el-input__inner:focus, .el-form-item.is-success .el-textarea__inner, .el-form-item.is-success .el-textarea__inner:focus
    border-color #DDD

  .el-input.is-disabled .el-input__inner
    background-color #f5f5f5
    border-color #ddd
    color #999

  .el-table
    flex none
    font-size 12px

    th
      font-weight bold
      color #505050
      background-color #fafafa

    td, th
      padding 4px 0
      font-size 12px

    td:last-child, th:last-child, th:nth-last-child(2)
      border-right none

    tbody tr:last-child td
      border-bottom none

    &.el-table--border
      border 1px solid #dfdfdf

    &:before, &:after
      display none

    // 表头排序的上下箭头样式
    .caret-wrapper
      height 25px

    .sort-caret.ascending
      top 0

    .sort-caret.descending
      bottom 2px

    // 表格中的文字按钮
    .el-button--text
      padding 4px 0

  .el-pagination
    padding 15px 20px
    background #fff
    text-align right
    border-color #dfdfdf
    border-style solid

    .el-pager li
      font-size 12px
      font-weight normal

  .el-pagination.is-background .el-pager li:not(.disabled):hover
    color $red-color

  .el-pagination.is-background .el-pager li:not(.disabled).active
    background-color $red-color
    color #ffffff

  .el-table__fixed-right::before, .el-table__fixed::before
    display none

  .el-checkbox-group
    margin 0 -8px

  .el-checkbox.check-all
    margin 0

  .el-checkbox, .el-checkbox+.el-checkbox
    margin 0 8px

  // 隐藏日期选择器的关闭按钮
  .el-date-editor .el-range__close-icon
    display none

  .el-date-editor .el-range-input
    width 45%

  .el-input__suffix
    display flex
    justify-content center

    .el-input__clear, .el-input__icon
      color $red-color
      font-size 16px

      &:hover
        color $red-color

  .el-form-item__error
    font-size 12px
    color $red-color
    line-height 16px
    padding-top 0

  .el-loading-spinner .path
    stroke $red-color

  .el-date-table td.current:not(.disabled) span
    background-color $red-color

  .el-select-dropdown__item
    color #666666

  .el-select-dropdown__item.selected
    color $red-color

  .el-select-dropdown__item.hover, .el-select-dropdown__item:hover
    background-color $red-color
    color #ffffff

  .el-message-box__wrapper .el-button--primary
    background-color $red-color
    border-color $red-color

  .el-checkbox__input.is-checked+.el-checkbox__label, .el-radio__input.is-checked+.el-radio__label
    color #333333

  .el-checkbox__input .el-checkbox__inner
    background-color #D6D7D8

  .el-checkbox__input.is-checked .el-checkbox__inner
    background-color $red-color
    border-color $red-color

  .el-checkbox__inner:hover, .el-checkbox__input.is-focus .el-checkbox__inner
    border-color $red-color

  .el-form-item.is-required:not(.is-no-asterisk)>.el-form-item__label:before
    color $red-color

  .el-checkbox
    margin 0

  .el-radio-group
    line-height 46px
    font-size inherit

    .el-radio__inner
      background-color #D6D7D8

    .el-radio__inner:hover, .el-radio__input.is-checked .el-radio__inner
      border-color $red-color

    .el-radio__input.is-checked .el-radio__inner
      background $red-color

    .el-radio__input.is-checked+.el-radio__label
      color $red-color

  .el-button--primary
    background-color $red-color
    border-color $red-color

  .el-button--primary:focus, .el-button--primary:hover
    background-color $red-color
    border-color $red-color
    color #ffffff

  .el-button.is-disabled, .el-button.is-disabled:focus, .el-button.is-disabled:hover
    color #c0c4cc !important
    cursor not-allowed !important
    background-image none !important
    background-color #fff !important
    border-color #ebeef5 !important

  .el-dialog
    .el-dialog__header
      position relative
      text-align center
      background-color $red-color
      height 48px
      padding 0

      .el-dialog__title
        height 48px
        line-height 48px

      .el-dialog__headerbtn
        font-size 20px
        height 32px
        line-height 32px
        top 50%
        margin-top -16px

        .el-dialog__close
          opacity 0.7

      .el-dialog__headerbtn:focus .el-dialog__close, .el-dialog__headerbtn:hover .el-dialog__close
        opacity 1

      .el-dialog__title, .el-dialog__close
        color #fff

    .el-dialog__footer
      border-top 1px solid #dfdfdf
      padding 15px 20px
      margin-top -20px

    .el-dialog__body
      padding 30px 50px 52px 26px

  // 空心
  .hollow
    // 禁用按钮
    &.el-button.is-disabled, &.el-button.is-disabled:focus, &.el-button.is-disabled:hover
      background-color transparent !important
      border 1px solid #D3D4D6 !important
      color #D3D4D6 !important

    &.el-button:hover, &.el-button:focus
      color $red-color !important
      background-color #FFE4E4 !important
      border-color $red-color !important

  // 实心
  .solid
    &.el-button
      color rgba(255, 255, 255, 0.8) !important
      border 0

    // 禁用按钮
    &.el-button.is-disabled, &.el-button.is-disabled:focus, &.el-button.is-disabled:hover
      background-color #F0F0F0 !important
      border 1px solid #F0F0F0 !important
      color #999999 !important

    &.el-button:hover, &.el-button:focus
      color rgba(255, 255, 255, 1) !important

// 弹框为480px的表单样式
.four-eight
  color #000

  .title
    margin-top 30px
    font-size 14px
    color #434343

  .con-title
    font-size 12px
    color #666666
    line-height 20px

  .hit-check
    display flex

    .hit-check-label
      line-height 1
      margin-top 7px
      margin-left 5px

  .el-tabs__nav-scroll
    display flex
    justify-content center

  .el-tabs__item
    text-align center
    color #171717

  .el-tabs__item.is-active
    color $red-color

  .el-tabs__active-bar
    background-color $red-color

  .el-tabs__nav-wrap::after
    background-color #dddddd

  .el-form
    .el-form-item
      margin-bottom 20px

      &+.footer
        margin-top -5px
        margin-bottom 30px

      &:nth-last-child(1)
        margin-bottom 0

    .el-form-item__label
      height 46px
      color #434343
      font-size 14px
      line-height 46px

    .el-input
      width 300px
      height 46px

      .el-input__inner
        width 100%
        height 100%
        background-color transparent
        border-radius 3px

// 弹框强制英文单词断行
.el-message-box
  .el-message-box__title, .el-message-box__message
    word-break break-all
