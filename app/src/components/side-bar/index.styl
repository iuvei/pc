$red-color = #FE202D

.side-bar
  width 130px
  position fixed
  right 0
  top 0
  bottom 0
  margin auto 0
  transition right 0.2s
  z-index 1000
  background-color #fff
  font-size 14px

  .top-bg
    position absolute
    top -147px

  .bottom
    position absolute
    width 130px
    height 20px
    right 0
    bottom -20px
    background url('./img/btn.svg') no-repeat
    background-position center
    text-align center
    cursor pointer
    color #FF737E

    img
      margin-right 5px

    span
      line-height 20px
      display inline-block
      font-size 12px
      color rgba(254, 254, 254, 1)

    &.horizontal-bottom
      position fixed
      right -55px !important
      top 0
      bottom 0
      margin auto 0
      transform rotate(90deg)

      span
        transform scale(0.833) rotate(-90deg)

  li
    background-color $red-color
    display flex
    cursor pointer
    border-top 1px solid #F94347
    flex-direction column
    justify-content center

    &.seven-eight
      height 77px

    &.six-three
      height 62px

    &.five-three
      height 52px

    .wrap
      display flex
      margin-left 20px

      .img-wrap
        margin-right 7px
        border-radius 50%
        display flex
        justify-content center
        align-items center
        width 24px
        height 24px

      .label
        color #fff
        line-height 24px

    .value
      color #FFF701
      font-weight bold
      margin-left 20px
      word-break break-all
      width 97px
      text-align center

// 适配全屏弹窗时滑动条消失导致位置偏移
.dialog-css, .el-popup-parent--hidden
  .home
    .side-bar
      padding-right 17px

      // 关上了侧边栏后
      &.no-right
        padding-right 0px !important

      .bottom
        right 17px

        &.horizontal-bottom
          right 0
          right -38px !important