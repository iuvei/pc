.edit-form
  >>>
    .el-tabs
      margin-top -30px

      .el-tabs__header
        margin-bottom 30px
        height 45px
        line-height 45px

  .last-item
    margin-bottom 0 !important
    margin-top 30px

  .wrap
    display flex

    .code-btn
      background-color #fff5b2 !important
      height 46px
      margin-left 7px
      color #171717
      width 140px
      font-size 14px
      border 0

      &.is-disabled
        opacity 0.4

    .eye-btn
      width 60px
      display flex
      align-items center
      justify-content center
      cursor pointer
      position absolute
      right 0
      height 46px

      img
        width 24px

  .text
    line-height 44px
    color #999
    font-size 14px
    width 100%
    height 44px
    border 1px solid #ddd
    display inline-block
    border-radius 3px
    text-indent 15px
    cursor not-allowed

  .footer
    margin-left 110px
    color #999999
    font-size 12px
    line-height 16px

  .btns-wrap
    width 100px
    height 40px
    line-height 40px
    padding 0
    border-radius 3px
    font-size 14px
    margin-left 15px

    &.cancel
      background-color #B5B5B5
      margin-left 0

    &.confirm
      background-color #E6382F
