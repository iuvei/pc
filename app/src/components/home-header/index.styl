.home-header
  background #DDDDDD
  width 100%
  height 110px
  padding-top 6px

  .top-wrap
    height 50px

    .left
      background-color #f4f5fa
      position relative
      right 50%
      margin-right 250px
      height 50px
      display flex
      flex-direction row-reverse

      .angle
        position absolute
        top 0
        right 0
        background-color #DDDDDD
        width 0
        height 0
        border-right 50px solid transparent
        border-bottom 50px solid #f4f5fa
        overflow hidden

      .btns
        display flex
        width 350px
        z-index 1
        font-size 12px

        button
          margin 0 5px
          color #434343

          &:hover
            color rgba(0, 0, 0, 0.5)

    .right
      position relative
      top -60px
      left 50%
      margin-left -250px
      width 850px
      height 60px
      display flex
      flex-direction row-reverse
      align-items center

      .password
        color red
        font-size 12px
        height 30px
        box-sizing border-box
        padding-top 16px
        cursor pointer

      .register
        width 80px
        height 30px
        padding 0
        margin-right 8px
        background-color #F4002B
        border none

      .login
        width 60px
        height 30px
        padding 0
        margin-right 8px
        background-color #F4002B
        border none

      .el-form-item
        margin-bottom 0

        >>>
          .el-form-item__error
            top 30px

          .el-input
            width 140px

            input
              height 30px
              line-height 30px
              border none

            .el-input.is-active .el-input__inner, .el-input__inner:focus
              border-color #F4002B

      .logout
        width 56px
        height 30px
        padding 0 0 0 4px
        background-color #191C21
        border none
        color #fff
        letter-spacing 1px

      .center-btns
        margin 0 10px

        ul
          display block
          text-align center

          li+li:before
            content '|'
            padding 0 10px
            color #A6A6A6
            font-size 14px

          li
            display inline-block
            vertical-align top

            a
              color #1F212A
              font-size 14px
              font-weight 600
              text-align center
              text-decoration none
              background transparent

              &:hover
                opacity 0.8

      .mail
        margin-right 50px
        cursor pointer
        position relative

        span
          position absolute
          display block
          content ''
          width 6px
          height 6px
          top -2px
          right -2px
          border-radius 50%
          background-color red

      .balance-wrap
        display flex
        align-items center
        margin-right 20px

        span
          font-size 14px
          font-weight bold
          color #F4002B
          margin-left 10px

      .user-wrap
        display flex
        align-items center
        margin-right 20px

        span
          font-size 14px
          font-weight bold
          color #F4002B
          margin-left 10px
