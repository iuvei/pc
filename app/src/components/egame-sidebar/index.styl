.egame-sidebar
  position fixed
  top 0
  transition left 0.2s
  z-index 1000
  width 320px
  height 100%
  background #151526

  .logo
    height 88px
    background #151526
    display flex
    align-items center
    justify-content space-around
    overflow hidden

    img
      height 35px
      width auto

  .banner
    height 148px
    background #2E2E47
    overflow hidden

    img
      height 100%

  .tab-nav
    height 60px
    width 320px
    background #F4002B
    position relative

    .nav
      height 60px
      padding 0 6px
      color #fff
      display flex
      justify-content space-between
      align-items center
      text-align center
      overflow hidden

      .el-icon-arrow-left, .el-icon-arrow-right
        width 16px
        height 16px
        line-height 16px
        border 1px solid rgba(255, 255, 255, 0.8)
        border-radius 50%
        cursor pointer
        outline none

      .swiper-slide
        width auto
        border-right 1px solid rgba(255, 255, 255, 0.8)
        padding 0 10px

        &:last-child
          border-right none

        .name
          font-size 14px
          cursor pointer

        .active
          color #FFDE01

    .toggle-btn
      position absolute
      top 0
      left 320px
      width 38px
      height 60px
      font-size 14px
      line-height 18px
      color #F4F5FA
      background #DA0026
      text-align center
      box-sizing border-box
      padding-top 10px

  .list-warp
    width 320px
    background #151526
    height 600px
    overflow hidden

    .tab-con
      width 337px
      background #151526
      height 600px
      overflow-y auto

      .tab-con-list
        display flex
        flex-wrap wrap

        .tab-con-item
          width 106px
          height 106px
          color #fff
          position relative
          box-sizing border-box
          padding 12px
          border-bottom 1px solid #2e2e47

          &:nth-child(3n+1), &:nth-child(3n+2)
            border-right 1px solid #2e2e47

          .icon
            width 58px
            height 58px
            display block
            margin 0 auto

          .name
            font-size 14px
            line-height 20px
            text-align center

          .hot
            position absolute
            width 19px
            top 3px
            right 3px

          .active
            position absolute
            width 14px
            top 0
            left 4px
