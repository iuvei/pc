.game-wrap
  width 1200px
  margin 0 auto
  padding 20px 0
  position relative

  .bg-text
    position absolute
    top 0
    background url('./img/bg-text.png') no-repeat center
    width 1898px
    height 232px
    left 50%
    margin-left -949px
    z-index 1

  .title-wrap
    display flex
    position relative
    z-index 3

    .title
      font-size 18px
      color #4D4F57
      font-weight 800

      .sub
        font-size 10px
        color #191C22
        font-weight 500
        margin-top 4px

    .desc
      font-size 16px
      color #2C2E2E
      font-weight 400
      margin 10px 0 0 68px

  .frame-wrap
    height 606px
    width 1200px
    margin-top 10px
    position relative
    z-index 2
    background-color #fff
    box-shadow 4px 6px 16px rgba(0, 0, 0, 0.4)

    .bg-frame
      background url('./img/bg-frame.png') no-repeat top center
      position absolute
      width 719px
      height 377px
      right 0
      bottom 13px
      z-index 1

    .head-wrap
      background-color #F4002B
      height 70px
      text-align center
      font-size 32px
      font-weight bold
      color #fff
      letter-spacing 2px
      display flex
      justify-content center

      .text
        line-height 68px

      .money
        font-size 40px
        letter-spacing 1px
        line-height 70px
        margin-left 10px

    .body-wrap
      display flex
      height 536px

      .left-wrap
        width 320px
        position relative
        background-color #D8D8D8

        .arrow-wrap
          height 43px
          background-color #dddddd
          line-height 42px
          text-align center
          cursor pointer
          position relative

          &:hover
            .active
              opacity 1

            .normal
              opacity 0

          .active
            opacity 0

          img
            height 10px
            position absolute
            left 50%
            transform translateX(-50%)
            margin-top 16px

        .menu-wrap
          height 450px
          width 348px
          position relative
          overflow hidden

          ul
            position relative
            padding 0
            margin 0
            top 0

            li
              width 320px
              height 90px
              background-color #E7E8E9
              display flex
              align-items center
              color #20222A
              position relative
              cursor pointer

              .line
                position absolute
                background-color #D8D8D8
                height 1px
                width 320px
                top 0

              &:hover
                background-color #D8D8D8

              &.active
                background url('./img/menu-active.png') no-repeat center
                width 348px
                height 90px
                color #fff

              .logo
                width 160px
                height 68px

              .name
                font-size 19px
                font-weight 800
                margin-bottom 8px
                letter-spacing 1px

              .sub
                font-size 14px
                font-weight 500

              .hot
                width 23px
                height 12px
                position absolute
                left 280px
                top 28px

      .right-wrap
        width 880px
        height 536px
        position relative
        z-index 2

        .list-wrap
          display flex
          flex-wrap wrap
          padding 8px 20px

          .item
            width 168px
            height 222px
            margin 8px 20px
            background-color #151526
            position relative

            .mask
              background-color rgba(0, 0, 0, 0.4)
              width 100%
              height 100%
              position absolute
              opacity 0
              z-index 1
              text-align center
              padding 20px 0
              box-sizing border-box

              &:hover
                animation anim-btn 0.4s
                animation-fill-mode forwards

              @keyframes anim-btn
                0%
                  opacity 0

                100%
                  opacity 1

              .btn
                width 100px
                height 36px
                line-height 35px
                border-radius 18px
                font-size 16px
                text-align center
                font-weight bold
                letter-spacing 1px
                margin 20px auto
                cursor pointer

                &.start
                  background-color #F4002B
                  color #fff

                  &.demo
                    margin-top 45px

                &.try
                  background-color #FFDE01
                  color #151526

            .icon
              height 168px
              width 168px
              text-align center
              line-height 168px

              img
                max-width 100%
                max-height 100%
                vertical-align middle

            .name-wrap
              position relative
              bottom 0
              text-align center
              z-index 2

              .name
                font-size 16px
                color #fff
                margin-top 10px
                overflow hidden
                text-overflow ellipsis
                white-space nowrap

              .star-wrap
                width 80px
                display flex
                justify-content space-between
                margin 5px auto

                img
                  width 13px

        .money-wrap
          background url('./img/bg-money.png') no-repeat center
          width 880px
          height 52px
          position absolute
          bottom 0
          color #fff
          text-align center

          .name
            font-size 14px
            font-weight bold
            margin-top 6px

          .money
            font-size 20px
            font-weight bold
            margin-top 4px
