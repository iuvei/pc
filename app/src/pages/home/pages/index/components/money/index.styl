.money-wrap
  width 260px
  height 380px
  position absolute
  background-color rgba(255, 58, 58, 0.5)
  left 50%
  margin-left 340px
  z-index 999

  .top-wrap
    height 80px
    background-color #F4002B
    text-align center

    .title
      font-size 20px
      font-weight bold
      color #FFF701
      letter-spacing 1px
      padding-top 20px

    .desc
      font-size 14px
      color #F4F5FA
      padding-top 8px

  .list-wrap
    height 200px
    overflow hidden
    position relative
    padding 0 15px
    margin 5px 0

    ul
      height 200px
      position relative
      padding 0
      margin 0
      top 0

      li
        height 25px
        line-height 25px

        span
          display inline-block
          font-size 12px
          color #FFE6E6

          &.user
            width 36%

          &.game
            width 32%

          &.money
            width 32%
            color #FCFF04
            text-align right

            &:after
              content 'å…ƒ'

  .ad-wrap
    text-align center

    img
      margin-bottom 8px
      cursor pointer