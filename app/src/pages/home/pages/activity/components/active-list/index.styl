$img_width = 736
$title_color = #EE071F
$title_size = 22px
$time_color = #1F212A

.activelist
  .item
    width 100%
    height 200px
    display flex
    background #ffffff
    margin-top 14px
    box-shadow 0px 2px 4px 0px rgba(0, 0, 0, 0.2)
    position relative

    &:hover
      .border
        opacity 1

    .border
      position absolute
      opacity 0
      transition opacity 0.2s ease
      width 100%
      height 100%
      border 4px solid #FFDE01
      box-sizing border-box
      -moz-box-sizing border-box
      -webkit-box-sizing border-box

    .img
      width unit($img_width, 'px')
      background-position top center
      background-size cover
      background-repeat no-repeat

    .right
      width unit(1200 - $img_width, 'px')
      padding 20px 25px
      box-sizing border-box
      position relative
      z-index 2

      .title
        color $title_color
        font-size $title_size
        margin-bottom 10px
        overflow hidden
        text-overflow ellipsis
        white-space nowrap

      .description
        height 60px
        overflow hidden

      .time
        color $time_color
        margin-top 5px

      .btns
        text-align right
        margin-top 10px

        span
          display inline-block
          width 80px
          height 30px
          line-height 30px
          text-align center
          border-radius 15px
          color #ffffff
          font-size 14px
          font-weight bold
          cursor pointer
          margin-right 10px

          &.detail
            background rgba(251, 112, 64, 1)

          &.apply
            background rgba(238, 7, 31, 1)
