$bg_menu = #EE071F
$font_color = #FFD5D9
$font_size = 16px
$bg_active = #FFFFFF
$color_active = #EE071F

.type-menu
  background $bg_menu
  height 54px
  position relative

  >>>
    .swiper-container
      margin-top 14px
      padding 12px 30px

    .swiper-slide
      width auto

  .swiper-button-prev, .swiper-button-next
    width 30px
    height 54px
    top 0
    margin 0
    background-size 10px 18px
    background-color $bg_menu
    background-image url('./img/left.png')
    z-index 3

    &:hover
      background-color #D8081D

    &.swiper-button-disabled
      opacity 1

  .swiper-button-prev
    left 0

  .swiper-button-next
    right 0
    transform rotate(180deg)

  .item
    width auto
    font-size $font_size
    color $font_color
    padding 7px 9px
    margin 0 15px
    cursor pointer

    &.active
      background $bg_active
      color $color_active
      border-radius 15px