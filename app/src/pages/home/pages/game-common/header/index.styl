.common-header
  .top
    width 1200px
    height 80px
    box-sizing border-box
    padding 0 40px
    margin 0 auto
    background-color #ffffff
    display flex
    justify-content space-between
    align-items center

    .logo
      height 100%
      line-height 80px

      img
        display inline-block
        vertical-align middle
        margin-right 20px

    .gamesearch
      width 246px
      height 34px
      line-height 34px
      border-radius 3px
      position relative

      .input
        height 100%
        width 246px
        padding 0 10px
        box-sizing border-box
        display inline-block
        vertical-align top

        &::-webkit-input-placeholder
          color #ABACAF
          font-size 14px

      .search
        display inline-block
        position absolute
        right 0px
        width 34px
        height 34px
        background-image url('./img/search.png')
        background-position center
        background-repeat no-repeat
        cursor pointer