.game-list
  min-height 400px
  max-height 1016px
  overflow-y auto
  overflow-x hidden
  position relative

  &.isPage
    min-height 780px

  .list
    width 1120px
    box-sizing border-box
    margin 0 auto

    .item
      width 208px
      height 218px
      font-size 0
      display inline-block
      margin-right 20px
      margin-bottom 20px
      position relative

      &:nth-child(5n)
        margin-right 0

      .img
        width 208px
        height 170px
        line-height 170px
        background-color #11131B
        text-align center
        box-sizing border-box
        border-radius 10px 10px 0px 0px

        img
          max-width 100%
          max-height 100%
          vertical-align middle

      .text
        height 48px
        line-height 48px
        text-align center
        background-color #252538
        color #ffffff
        font-size 14px
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
        border-radius 0px 0px 10px 10px

      .collection
        position absolute
        top 6px
        right 6px
        width 28px
        height 28px
        border-radius 50%
        background-color rgba(248, 248, 248, 1)
        background-image url('./img/not_favorite.png')
        background-position center center
        background-repeat no-repeat
        opacity 0.8
        z-index 3
        cursor pointer

        &.favorite
          background-image url('./img/is_favorite.png')

      .shadow
        position absolute
        top 0
        width 100%
        height 100%
        line-height 100%
        background-color rgba(0, 0, 0, 0.6)
        text-align center
        display none
        border-radius 10px

        span
          display block
          font-size 14px
          color #ffffff
          width 80px
          height 32px
          margin 0 auto
          line-height 32px
          cursor pointer
          border-radius 15px
          margin-top 60px

          &.demo
            margin-top 100px

          &.try
            background-color #ffde01
            margin-top 30px
            color #000000

      &:hover
        .shadow
          display block

  .notfound
    text-align center
    line-height 200px
    margin-top 40px

    img
      vertical-align middle
      height 200px

