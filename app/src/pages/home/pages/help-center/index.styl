.help-center
  background url('./img/bg.png') no-repeat center top #F0F0F2
  padding-top 30px

  .container
    width 1200px
    margin 0 auto
    margin-top 14px
    padding-bottom 51px
    display flex
    justify-content space-between

    .menus
      width 248px
      cursor pointer
      background-color #DDDDDD

      li
        height 90px
        background-color #E7E8E9
        position relative
        display flex
        box-sizing border-box
        padding-top 22px
        padding-left 34px
        border-bottom 1px solid #ddd

        &:last-child
          border-bottom 0

        .icon, .text
          position relative
          z-index 1

        .text
          margin-left 16px

          p
            font-size 12px
            color #434343
            margin-top 4px

            &.t
              font-weight bold
              font-size 18px
              color #20222A

        &.active .text p
          color #ffffff

        .bg
          position absolute
          top 0
          left 0
          width 262px
          height 90px
          background url('./img/select_bg.svg') no-repeat
          z-index 0

    .content
      width 938px
      background-color #ffffff
      padding 36px 65px 107px 60px
      box-sizing border-box