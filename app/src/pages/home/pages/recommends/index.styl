.recommend_bg
  background-color #F4F5FA
  min-height 988px

  .recommend-header
    width 100%
    background-color #F4002B
    margin-bottom 30px
    position relative
    min-height 100%

    .top
      width 1200px
      height 70px
      box-sizing border-box
      padding 0 30px
      margin 0 auto
      display flex
      justify-content space-between
      align-items center

      .logo
        span
          color #FFF701
          font-size 20px

          &:nth-child(1)
            color #ffffff
            font-size 30px
            font-weight 700
            margin-right 20px

      .gamesearch
        width 246px
        height 34px
        line-height 34px
        border-radius 3px
        position relative

        .input
          height 100%
          width 246px
          padding 0 10px
          box-sizing border-box
          display inline-block
          vertical-align top
          border 1px solid #F4002B

          &::-webkit-input-placeholder
            color #ABACAF
            font-size 14px

        .search
          display inline-block
          position absolute
          right 0px
          width 34px
          height 34px
          background-image url('./img/search.png')
          background-position center
          background-repeat no-repeat
          cursor pointer
          background-color #151526

  .bottom1
    width 100%
    height 20px
    position fixed
    bottom 0
    background-color #F4002B