$red-color = #F4002B

.mobile-betting
  margin-top 30px
  height 900px
  background url('./img/bg.png') no-repeat center

  .container
    width 1200px
    margin 0 auto

    .top
      width 100%
      display flex
      position relative
      justify-content space-between

      .l
        width 1156px
        height 3px
        background-color #DDDDDD
        position absolute
        bottom -14px
        left 22px

      >li
        margin-top 30px
        cursor pointer
        position relative
        margin-left 36px

        &:nth-of-type(2)
          margin-left 68px

        &:nth-of-type(3)
          margin-right 20px

        .red
          color $red-color !important

        .red-bg
          background-color $red-color !important

        .num
          display inline-block
          width 33px
          height 30px
          transform skew(-40deg)
          background-color #191C21
          text-align center

          i
            transform skew(20deg)
            display inline-block
            font-style normal
            font-size 20px
            color #ffffff
            line-height 30px

        .title
          color #353535
          font-size 16px
          margin-left 20px
          font-style italic
          letter-spacing 1px

      .line-wrp
        width 269px
        height 3px
        background-color $red-color
        position absolute
        left 22px
        bottom -14px
        z-index 1
        transition all 0.2s

        .triangle
          width 0
          height 0
          border-width 7px
          border-style solid
          border-color $red-color transparent transparent transparent
          margin 0 auto

    .page-wrap
      width 100%
      height 800px
      margin-top 22px
      overflow hidden

      .page
        height 800px
        transition all 0.2s

        >li
          width 1200px
          height 100%
          float left

          &.page1
            background url('./img/one.png') no-repeat
            position relative

            .h5-url-wrap
              position absolute
              width 500px
              height 54px
              background rgba(255, 255, 255, 1)
              box-shadow 1px 4px 7px 0px rgba(25, 28, 33, 0.21)
              border-radius 27px
              top 322px
              left 56px

              .h5-url
                line-height 54px
                margin-left 24px
                color #474849
                font-size 14px
                position relative
                font-weight bold

                span
                  margin-left 14px
                  color #EE071F
                  font-size 20px

                .copy
                  width 98px
                  height 54px
                  background rgba(237, 7, 31, 1)
                  border-radius 27px
                  text-align center
                  font-size 18px
                  font-family PingFang-SC-Medium
                  font-weight 500
                  color rgba(247, 239, 3, 1)
                  line-height 54px
                  cursor pointer
                  position absolute
                  right 0
                  top 0

            .link
              position absolute
              top 457px
              left 103px
              display flex

              p
                color #191C21
                font-size 14px
                line-height 24px
                text-align center
                margin-top 10px
                font-weight bold
                display flex
                justify-content center

                span
                  margin-left 8px

              .code
                width 180px
                height 180px
                display flex
                justify-content center
                align-items center

                img
                  width 144px

              .h5
                margin-left 31px

          &.page2
            display flex
            justify-content space-between

            .con
              .t-title
                margin-top 113px

                span
                  &.line
                    width 9px
                    height 30px
                    display inline-block
                    background-color #F7D21E

                  &.t
                    line-height 1
                    font-size 37px
                    color #211E1E
                    padding-left 22px
                    font-weight bold

              .t-con
                margin-top 51px
                display flex

                .step-wrap
                  li
                    width 32px
                    height 32px
                    border-radius 50%
                    background-color #f2dce5
                    display flex
                    align-items center
                    justify-content center
                    position relative
                    margin-bottom 17px

                    .circle
                      width 24px
                      height 24px
                      border-radius 50%
                      background-color $red-color
                      text-align center
                      line-height 24px
                      font-size 14px
                      color #ffffff
                      font-style italic

                    .line
                      position absolute
                      width 2px
                      height 17px
                      bottom -17px
                      background-color #dbdce1

                .step-list
                  margin-left 19px

                  li
                    line-height 32px
                    margin-bottom 17px
                    color #20222A
                    font-size 16px
                    font-weight bold

          &.page3
            display flex
            justify-content space-between

            .pic
              img
                margin-left -80px

            .con
              width 560px

              .t-title
                margin-top 113px

                span
                  &.line
                    width 9px
                    height 30px
                    display inline-block
                    background-color #F7D21E

                  &.t
                    line-height 1
                    font-size 36px
                    color #211E1E
                    padding-left 22px
                    font-weight bold

              .t-con
                margin-top 57px

                .one-title
                  font-size 22px
                  color #E73C43
                  margin-bottom 33px
                  font-weight bold

                .one-con
                  color #181B23
                  font-size 16px
                  line-height 28px
                  margin-bottom 98px
                  margin-right 16px

                .way
                  display flex

                  li
                    margin-left 84px

                    &:first-child
                      margin-left 0

                    p
                      text-align center
                      color #414348
                      font-size 16px
                      margin-top 24px
