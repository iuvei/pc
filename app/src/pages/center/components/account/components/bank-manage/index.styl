$red-color = #e6382f

.bank-manage
  height 620px
  overflow-y auto

  .red-btn-260
    width 180px !important
    font-size 14px !important

  .text
    display inline-block
    line-height 38px
    height 38px
    color #999
    font-size 14px
    width 240px
    border 1px solid #ddd
    border-radius 3px
    text-indent 15px
    cursor not-allowed

  .btn
    background-color $red-color
    font-size 14px
    width 120px
    height 40px
    border-radius 3px

  .container1
    padding 20px 10px
    background-color #fff

    .red
      color $red-color

    .btn
      margin-bottom 26px

  .container2
    background-color #ffffff
    padding 30px 0 28px

    .form
      .withpassword
        width 426px
        position relative
        display flex

        .pas-tip
          font-size 12px
          margin-left 15px
          color #999999

          .cursor
            cursor pointer
            color $red-color

  .tip
    margin-top 10px
    background-color #ffffff
    padding 21px 19px 19px
    font-size 12px

    .title
      color #666666
      font-weight bold
      margin-bottom 17px

    .tip-content
      color #999999
      margin-bottom 8px

