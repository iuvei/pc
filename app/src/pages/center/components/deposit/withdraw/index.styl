$table-border-color = #ccc
$green-color = #3cbf55
$red-color = #E6382F

.withdraw
  max-height 630px
  overflow-y auto

  .first-step
    .money
      background-color #fff
      padding 20px

      i
        margin-right 56px

        span
          font-size 16px
          color $red-color

    .form
      background-color #fff
      padding 10px 20px
      margin-top 10px

      .limit
        span
          margin-right 20px

      .left6px
        margin-left 6px

  .second-step
    background-color #fff
    padding 20px

    .table1
      margin-bottom 14px

      .pass
        color $green-color

      .nopass
        color $red-color

  .note
    background-color #fff
    padding 20px
    margin-top 10px
    line-height 25px
    font-size 12px
    color #666666